{% extends 'DrinkBundle::layout.html.twig' %}

{% block page_title %}
    Detalle de pedido
{% endblock %}

{% block page_content %}

<div class="row">
    <div class="col-md-4">
        <div class="box ">
            <div class="box-header with-border">
                <h3 class="box-title">Productos del pedido</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                The body of the box
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>

    <div class="col-md-4">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Datos de Ubicaci√≥n</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                The body of the box
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>

    <div class="col-md-4">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Importes</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                The body of the box
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pedido.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ pedido.numero }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if pedido.fecha %}{{ pedido.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Subtotal</th>
                <td>{{ pedido.subTotal }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ pedido.total }}</td>
            </tr>
            <tr>
                <th>Calle</th>
                <td>{{ pedido.calle }}</td>
            </tr>
            <tr>
                <th>Nro</th>
                <td>{{ pedido.nro }}</td>
            </tr>
            <tr>
                <th>Latitud</th>
                <td>{{ pedido.latitud }}</td>
            </tr>
            <tr>
                <th>Longitud</th>
                <td>{{ pedido.longitud }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ pedido.telefono }}</td>
            </tr>
            <tr>
                <th>Dirreferencia</th>
                <td>{{ pedido.dirReferencia }}</td>
            </tr>
            <tr>
                <th>Fechaupdate</th>
                <td>{% if pedido.fechaUpdate %}{{ pedido.fechaUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pedido_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pedido_edit', { 'id': pedido.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
