{% extends 'DrinkBundle::layout.html.twig' %}

{#% block body %#}
{% block page_title %}
    Nuevo producto
{% endblock %}

{% block page_content %}
    <br>

    <section ng-controller="productoController" ng-cloak="">
        <div class="row">
            <div class="col-xs-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Datos del producto</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form name="formCrearProducto">
                        <div class="box-body">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label ><span class="text-red">*</span> Categoria</label>
                                    <select ng-model="categoria" class="form-control" name="categoria" >
                                        {% for categoria in categorias %}
                                            <option value="{{ categoria.id }}">{{ categoria.nombre }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label ><span class="text-red">*</span> Nombre</label>
                                    <input ng-model="nombre"  name="nombre" type="text"  class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label ><span class="text-red">*</span> Precio</label>
                                    <input ng-model="precio" name="precio" type="text"
                                            class="form-control"
                                           ng-pattern="/^[0-9]+(\.[0-9]{1,2})?$/" step="0.01" required>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label >Descripción</label>
                                    <input ng-model="descripcion" name="descripcion" type="text"
                                           class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputFile">Subir imagen</label>
                                    <input type="file" id="exampleInputFile">

                                    <p class="help-block">Imagen .png</p>
                                </div>
                                <div class="form-group">
                                    <label ><span class="text-red">*</span> Stock</label>
                                    <select ng-model="stock" class="form-control" name="stock" required>
                                        <option value="Stock" >Stock</option>
                                        <option value="Sin stock" >Sin stock</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button class="btn btn-default">Atrás</button>
                            <button ng-show="!mostrarLoader" ng-click="crearProducto(formCrearProducto)" ng-disabled="formCrearProducto.$invalid" type="submit" class="btn btn-primary">Crear</button>
                            <div ng-show="mostrarLoader" class="overlay">
                                <i class="fa fa-refresh fa-spin"></i>
                            </div>
                            <label ng-show="mostrarExito"><p class="text-green"> <i class="fa fa-check "></i> Se editó el producto</p></label>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
